<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/layout_preview_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/front_preview_height" >

            <SurfaceView
                android:id="@+id/front_preview"
                android:layout_width="@dimen/layout_preview_width"
                android:layout_height="@dimen/front_preview_height"
                android:visibility="visible" />

            <SurfaceView
                android:id="@+id/back_preview"
                android:layout_width="@dimen/layout_preview_width"
                android:layout_height="@dimen/front_preview_height"
                android:visibility="visible" />

            <SurfaceView
                android:id="@+id/right_preview"
                android:layout_width="@dimen/layout_preview_width"
                android:layout_height="@dimen/front_preview_height"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_image_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_setting_applist_9three"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_9three_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/iv_9three_setting" />

            <ImageView
                android:id="@+id/iv_9three_applists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/iv_9three_applist" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gridview_9three_nosplite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/bg_home_9three"
        android:horizontalSpacing="0dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:verticalSpacing="60dp" />

</LinearLayout>